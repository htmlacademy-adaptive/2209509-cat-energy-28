  "description": "Личный проект «Кэт энерджи» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "10.4.0",
    "browser-sync": "^2.27.7",
    "gulp": "4.0.2",
    "gulp-less": "^5.0.0",
    "gulp-plumber": "^1.2.1",
